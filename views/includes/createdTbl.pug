.card.mb-3
    .card-header
      i.fa.fa-table
      |  Donations
    .card-body
      .table-responsive
        table#dataTable.table.table-bordered(width='100%', cellspacing='0')
          thead
            tr
              th No
              th Donation Type
              th App ID
              th Status
              th Created At
              th View
          tfoot
            tr
              th No
              th Donation Type
              th App ID
              th Status
              th Created At
              th View
          tbody
            each row, index in donations
              - var status = 'Pending';
              - if (row.status == 1 ) status = "Submitted information to doctor"
              - if (row.status == 2 ) status = "Doctor requested check body!"
              - if (row.status == 3 ) status = "Waiting doctor's approved"
              - if (row.status == 4 ) status = "Approved the donation"              
              tr
                td=(index+1)
                td=row.donateType
                td=row.id
                td=status
                td=row.createdAt
                td  
                  a.btn.btn-primary(href='/donate/' + row.id, role="button")
                    i.fa.fa-eye
            
    .card-footer.small.text-muted
